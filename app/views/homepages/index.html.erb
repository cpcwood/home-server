<h1>
  <%= @site_settings.header_text %>
  <div class='subtitle'>
    <%= @site_settings.subtitle_text %>
  </div>
</h1>

<%= render 'layouts/system_messages'%>

<% @cover_images.each do |image| %>
  <div class='flex_image_tile' data-controller='touch-hover-tile' data-action='touchstart->touch-hover-tile#checkTouch touchend->touch-hover-tile#addHover'>
    <%= image_tag(image_path_helper(image), class: image.image_type, style: image.custom_style ) %>
    <a href='<%= image.link %>'>
      <span class='cover_title' data-target='touch-hover-tile.coverTitle'>
        <span><%= image.description %></span>
      </span>
    </a>
  </div>
<% end %>