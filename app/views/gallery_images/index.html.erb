<% content_for :section_title do %>
  Gallery
<% end %>

<%= render partial: 'partials/system_messages'%>

<section class='gallery-container'>

    <% if @gallery_images.empty? %>
      <%= render partial: 'gallery_images/no_images' %>
    <% else %>
      <%= render partial: 'gallery_images/image_thumbnail', collection: @gallery_images, as: :image %>
    <% end %>

</section>