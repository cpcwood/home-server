<body style='font-size: 20px; font-family: Roboto, Arial, sans-serif;' bgcolor='#e0e0e0'>
  <table width="100%" border="0" cellspacing="0" cellpadding="0">
    <tr height='40px'></tr>
    <tr>
      <td width="10%"></td>
      <td width="80%">
        <div style='border-radius: 10px; overflow: hidden'>
          <table width="100%" border="0" cellspacing="0" cellpadding="0">
            <tr>
              <td bgcolor="#000000" style='font-family: Roboto Slab, Arial, sans-serif; font-size: 40px; letter-spacing: 0.04em; padding: 20px; color: #f0f0f0; background-image: url(<%= image_url(@header_image_url, id: 'header-image')%>); background-repeat: no-repeat; background-position: top center; background-size: cover;'>
                <%= Rails.application.credentials.email[:company_name] %>
              </td>
            </tr>
            <tr>
              <td>
                <div style='padding: 30px 40px 40px 40px; background-color:#ffffff'>
                  <table width="100%" border="0" cellspacing="0" cellpadding="0">
                    <tr>
                      <td style='padding: 0px 0px 10px 0px; font-size: 40px; font-family: Roboto Slab, Arial, sans-serif;'>
                        Account Updated
                      </td>
                    </tr>
                    <tr height='2px' width='100%' bgcolor='#e0e0e0'><td></td></tr>
                    <tr>
                      <td style='padding: 20px 0px 10px 0px;'>
                        Hi <%= @user.username %>,
                      </td>
                    </tr>
                    <tr>
                      <td style='padding: 10px 0px;'>
                        Your password was updated on: <%= @user.updated_at.strftime("%H:%M %d-%m-%Y") %>
                      </td>
                    </tr>
                    <tr>
                      <td style='padding: 10px 0px 0px 0px;'>
                        If you did not updated your password, please contact <%= Rails.application.credentials.email[:default_email] %>
                        <br>
                        <br>
                        Thanks,
                        <br>
                        <br>
                        <%= Rails.application.credentials.email[:default_name] %>
                      </td>
                    </tr>
                  </table>
                </div>
              </td>
            </tr>
          </table>
        </div>
      </td>
      <td width="10%"></td>
    </tr>
    <tr height='40px'></tr>
  </table>
</body>