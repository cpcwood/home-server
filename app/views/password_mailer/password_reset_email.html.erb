<body style='font-size: 20px; font-family: Roboto, Arial, sans-serif;' bgcolor='#e0e0e0'>
  <table width="100%" border="0" cellspacing="0" cellpadding="0">
    <tr height='40px'></tr>
    <tr>
      <td width="10%"></td>
      <td width="80%">
        <div style='border-radius: 10px; overflow: hidden'>
          <table width="100%" border="0" cellspacing="0" cellpadding="0">
            <tr>
              <td bgcolor="#000000" style='font-family: Roboto Slab, Arial, sans-serif; font-size: 40px; letter-spacing: 0.04em; padding: 20px; color: #f0f0f0; background-image: url(<%= image_url((@header_image_url), id: 'header_image')%>); background-repeat: no-repeat; background-position: top center; background-size: cover;'>
                <%= Rails.application.credentials.email[:company_name] %>
              </td>
            </tr>
            <tr>
              <td>
                <div style='padding: 30px 40px 40px 40px; background-color:#ffffff'>
                  <table width="100%" border="0" cellspacing="0" cellpadding="0">
                    <tr>
                      <td style='padding: 0px 0px 10px 0px; font-size: 40px; font-family: Roboto Slab, Arial, sans-serif;'>
                        Reset your password
                      </td>
                    </tr>
                    <tr height='2px' width='100%' bgcolor='#e0e0e0'><td></td></tr>
                    <tr>
                      <td style='padding: 20px 0px 10px 0px;'>
                        Hi <%= @user.username %>,
                      </td>
                    </tr>
                    <tr>
                      <td style='padding: 10px 0px;'>
                        We recently received a request to reset the password for your account <%= @user.email %>. To reset your password, click the button below. This link will expire in 1 hour:
                      </td>
                    </tr>
                    <tr>
                      <td>
                        <table border="0" width='100%' cellspacing="0" cellpadding="0" style='padding: 20px 10%'>
                          <tr>
                            <td align="center" style="border-radius: 10px; text-align: center;">
                              <a href="<%= reset_password_url(reset_token: @user.password_reset_token) %>" target="_blank" style="font-size: 25px; font-family: Roboto Slab, Arial, sans-serif; color: #ffffff; letter-spacing: 0.04em; text-decoration: none; text-decoration: none; border-radius: 10px; padding: 14px 30px; border: 1px solid #000000; display: inline-block; background-image: url(<%= image_url(@header_image_url, id: 'header_image')%>); background-repeat: no-repeat; background-position: top center; background-size: cover; background-color: #000000;">
                                Reset Password
                              </a>
                            </td>
                          </tr>
                        </table>
                      </td>
                    </tr>
                    <tr>
                      <td style='padding: 10px 0px 0px 0px;'>
                        If you did not request your password to be reset, please contact <%= Rails.application.credentials.email[:default_email] %>
                        <br>
                        <br>
                        Thanks,
                        <br>
                        <br>
                        <%= Rails.application.credentials.email[:default_name] %>
                      </td>
                    </tr>
                  </table>
                </div>
              </td>
            </tr>
          </table>
        </div>
      </td>
      <td width="10%"></td>
    </tr>
    <tr height='40px'></tr>
  </table>
</body>


