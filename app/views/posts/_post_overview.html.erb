<a href='<%= post_path(post) %>' class='post-overview-container show-blog-post-button' title='<%= post.title %>' tabindex='<%= post_iteration.index + 1 %>'>
  <div class='post-date'>
    <%= full_date(post.date_published) %>
  </div>
  <h3 class='post-overview-title'>
    <%= post.title %>
  </h3>
  <div class='post-overview-overview'>
    <%= post.overview %>
  </div>
</a>
