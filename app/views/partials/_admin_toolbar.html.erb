<% if @user %>
  <div class='toolbar-container'>
    <% if in_admin_scope? %>
      <%= link_to('View Section', admin_link_helper_section_path(model), class: 'standard-button') %>
    <% end %>
    <% if model.new_record? %>
      <%= link_to('Create New', admin_link_helper_new_path(model), class: 'standard-button') %>
    <% else %>
      <%= link_to('Edit', admin_link_helper_admin_path(model), class: 'standard-button') %>
    <% end %>
  </div>
<% end %>
