<% if content_for?(:typed_header) %>
  <header class='main-page-header' data-controller="typed-header">
    <div class="hidden" id="typed-strings-header" >
      <p> 
        <%= yield(:typed_header) %>
      </p>
    </div>
    <h1 id="typed-header" data-target="typed-header.typedHeader"></h1>
    <div class="hidden" id="typed-strings-subtitle">
      <p> 
        <%= yield(:typed_header_sub) %>
      </p>
    </div>
    <p class="subtitle" id="typed-subtitle" data-target="typed-header.typedSubtitle"></p>
  </header>
<% else %>
  <header class='main-page-header'>
    <h1>
      <%= yield :section_title %>
    </h1>
    <p class="subtitle">
      <%= yield :section_subtitle %>
    </p>
  </header>
<% end %>