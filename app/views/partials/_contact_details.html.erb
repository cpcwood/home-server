<div class='about-contact-container'>

  <%= image_tag(image_path_helper(image_model: model.profile_image), class: 'profile-image about') %>
  <div class='about-contact-details-container'>
    <div class='name'>
      <%= model.name %>
    </div>
    <div class='location'>
      <%= model.location %>
    </div>
  </div>

  <div class='about-contact-links-section'>
    <% if contact_link %>
      <%= link_to('Contact', contact_path, class: 'standard-button about-contact-link') %>
    <% end %>
    <a href='<%= model.linkedin_link %>' class='logo-link' target='_blank' title='LinkedIn link'>
      <%= image_tag('icons/linkedin-icon.svg', alt: 'LinkedIn logo') %>
    </a>
    <a href='<%= model.github_link %>' class='logo-link' target='_blank' title='Github link'>
      <%= image_tag('icons/github-icon.svg', alt: 'Github logo') %>
    </a>
  </div>

</div>
