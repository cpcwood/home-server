<% content_for :section_subtitle do %>
  Code Snippets: Index
<% end %>

<div class='dashboard-item-container'>
  <%= render partial: 'partials/admin_toolbar', locals: { model: (@code_snippets.empty? ? [CodeSnippet.new] : @code_snippets) } %>
</div>

<div class='dashboard-item-container'>
  <%= render partial: 'partials/system_messages'%>
</div>

<% if @code_snippets.empty? %>
  <%= render partial: 'partials/no_items', locals: {item: 'code snippets'} %>
<% else %>
  <section class='image-tile-container' data-controller="image-loader" data-target="image-loader.container" data-action='turbolinks:before-cache@window->image-loader#teardown'>
    <% @code_snippets.each_with_index do |code_snippet, index| %>
      <%= render partial: 'code_snippets/code_snippet_overview', locals: {code_snippet: code_snippet, path: edit_admin_code_snippet_path(code_snippet), index: index} %>
    <% end %>
  </section>
<% end %>