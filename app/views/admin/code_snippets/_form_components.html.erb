
<%= render partial: 'partials/system_messages'%>

<div class="embedded-form-entry-container">
  <%= f.label(:title, 'Title', class: 'input-label embedded-label') %>
  <%= f.text_field(:title, class: 'input-box embedded-input-box', placeholder: 'Enter title...') %>
</div>

<div class="embedded-form-entry-container">
  <%= f.label(:overview, 'Overview', class: 'input-label embedded-label') %>
  <%= f.text_field(:overview, class: 'input-box embedded-input-box', placeholder: 'Enter overview...') %>
</div>

<div class="embedded-form-entry-container">
  <%= f.label(:snippet, 'Code Snippet', class: 'input-label embedded-label') %>
</div>

<div class="embedded-form-entry-container">
  <%= f.text_area(:snippet, class: 'input-box embedded-text-area', placeholder: 'Enter code snippet to be rendered into cover image...') %>
</div>

<div class="embedded-form-entry-container">
  <%= f.label(:extension, 'Code file extension', class: 'input-label embedded-label') %>
  <%= f.text_field(:extension, class: 'input-box embedded-input-box', placeholder: 'Enter file extension such as `rb`...') %>
</div>

<div class="embedded-form-entry-container">
  <%= f.label(:text, 'Text content', class: 'input-label embedded-label') %>
</div>

<div class="embedded-form-entry-container">
  <%= f.text_area(:text, class: 'input-box embedded-text-area', placeholder: 'Add text content (you can use markdown)...') %>
</div>

<div class="embedded-form-entry-container submit-right">
  <%= f.submit("Submit", class: 'input-submit') %>
</div>