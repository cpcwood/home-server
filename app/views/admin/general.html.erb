<%= stylesheet_link_tag('admin/general') %>

<h1>
  Admin Zone
  <div class='subtitle'>
      General
  </div>
</h1>
<div class='admin_zone_container'>
  <%= render 'admin/sections' %>
  <div class='admin_section'>
    <div class='item_container'>
      <h3>
        System Messages
      </h3>
      <div class='messages'>
        <% flash.each do |type, msg| %>
          <div class="notice">
            <%= msg %>
          </div>
        <% end %>
        <div class='no_messages'>You have no messages</div>
      </div>
    </div>
    <div class='item_separator'></div>
  </div>
</div>