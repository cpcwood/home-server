<%= form_with(model: @site_settings, :url => admin_site_setting_path(@site_settings), method: "put") do |f| %>
    
    <h4> Site Name </h4>
    <div class="embedded-form-entry-container">
      <div class="input-label embedded-label">
        Current site name
      </div>
      <div class="embedded-current-value">
        <%= @site_settings.name %>
      </div>
    </div>

    <div class="embedded-form-entry-container">
      <%= f.label(:name, 'Site name', class: 'input-label embedded-label') %>
      <%= f.text_field(:name, class: 'input-box embedded-input-box', placeholder: 'new site name', value: @site_settings.name) %>
    </div>

    <div class="embedded-form-entry-container">
      <%= f.label(:header_text, 'Homepage header', class: 'input-label embedded-label') %>
      <%= f.text_field(:header_text, class: 'input-box embedded-input-box', placeholder: 'new homepage header', value: @site_settings.header_text) %>
    </div>

    <div class="embedded-form-entry-container">
      <%= f.label(:subtitle_text, 'Homepage subtitle', class: 'input-label embedded-label') %>
      <%= f.text_field(:subtitle_text, class: 'input-box embedded-input-box', placeholder: 'new homepage subtitle', value: @site_settings.subtitle_text) %>
    </div>

    <div class="embedded-form-entry-container">
      <%= f.label(:typed_header_enabled, 'Enable typed header', class: 'input-label embedded-label') %>
      <%= f.check_box(:typed_header_enabled, {class: 'input-check-box'}) %>
    </div>
  
    <br>
    <br>

    <div class="embedded-form-entry-container">
      <div class="form-submit-container">
        <%= f.submit('Update site settings', class: 'input-submit') %>
      </div>
      <div class="default-loader"></div>
    </div>

  <% end %>