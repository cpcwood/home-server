<%= form_with(model: @site_settings, :url => admin_site_setting_path(@site_settings), method: "put") do |f| %>
    
    <h4> Site Name </h4>
    <div class="embedded_form_entry_container">
      <div class="input_label embedded_label">
        Current site name:
      </div>
      <div class="embedded_current_value">
        <%= @site_settings.name %>
      </div>
    </div>

    <div class="embedded_form_entry_container">
      <%= f.label(:name, 'Site name:', class: 'input_label embedded_label') %>
      <%= f.text_field(:name, class: 'input_box embedded_input_box', placeholder: 'new site name', value: @site_settings.name) %>
    </div>

    <div class="embedded_form_entry_container">
      <%= f.label(:header_text, 'Homepage header:', class: 'input_label embedded_label') %>
      <%= f.text_field(:header_text, class: 'input_box embedded_input_box', placeholder: 'new homepage header', value: @site_settings.header_text) %>
    </div>

    <div class="embedded_form_entry_container">
      <%= f.label(:subtitle_text, 'Homepage subtitle:', class: 'input_label embedded_label') %>
      <%= f.text_field(:subtitle_text, class: 'input_box embedded_input_box', placeholder: 'new homepage subtitle', value: @site_settings.subtitle_text) %>
    </div>

    <div class="embedded_form_entry_container">
      <%= f.label(:typed_header_enabled, 'Enable typed header:', class: 'input_label embedded_label') %>
      <%= f.check_box(:typed_header_enabled, {class: 'input_check_box'}) %>
    </div>
  
    <br>
    <br>

    <div class="embedded_form_entry_container">
      <div class="form_submit_container">
        <%= f.submit('Update site settings', class: 'input_submit') %>
      </div>
      <div class="default_loader"></div>
    </div>

  <% end %>