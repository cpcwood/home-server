<% content_for :section_subtitle do %>
  Gallery: Index
<% end %>

<%= render partial: 'partials/admin_toolbar', locals: { model: GalleryImage.new } %>

<%= render partial: 'partials/system_messages' %>

<div class='gallery-container'>

  <% if @gallery_images.empty? %>
    <%= render partial: 'partials/no_items', locals: {item: 'images'} %>
  <% else %>
    <ul class='gallery-container' data-controller='justified-gallery' data-justified-gallery-target='container' data-justified-gallery-margin='2'>
      <%= render partial: 'admin/gallery_images/image_container', collection: @gallery_images, as: :gallery_image %>
    </ul>
  <% end %>

</div>
