<%= render partial: 'partials/system_messages'%>

<div class="embedded-form-entry-container">
  <%= f.label(:image_file, 'Upload image', class: 'input-label embedded-label') %>
  <%= f.file_field(:image_file, accept: 'image/png,image/jpeg', class: 'input-box embedded-no-border') %>
</div>

<div class="embedded-form-entry-container">
  <%= f.label(:description, 'Description', class: 'input-label embedded-label') %>
  <%= f.text_field(:description, class: 'input-box embedded-input-box', placeholder: 'Enter description...') %>
</div>

<div class="embedded-form-entry-container">
  <%= f.label(:date_taken, 'Date taken', class: 'input-label embedded-label') %>
  <%= f.text_field(:date_taken, class: 'input-box embedded-input-box', placeholder: 'Enter date taken...', data: { controller: 'datepicker', target: 'datepicker.dateField'}, autocomplete: "off") %>
</div>

<div class="embedded-form-entry-container">
  <%= f.label(:latitude, 'Latitude', class: 'input-label embedded-label') %>
  <%= f.number_field(:latitude, class: 'input-box embedded-input-box', placeholder: 'Enter latitude...') %>
</div>

<div class="embedded-form-entry-container">
  <%= f.label(:longitude, 'Longitude', class: 'input-label embedded-label') %>
  <%= f.number_field(:longitude, class: 'input-box embedded-input-box', placeholder: 'Enter longitude...') %>
</div>

<div class="embedded-form-entry-container submit-right">
  <%= f.submit("Submit", class: 'input-submit') %>
</div>