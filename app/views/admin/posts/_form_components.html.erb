<%= render partial: 'partials/system_messages' %>

<h3>
  Post Details
</h3>

<div class="embedded-form-entry-container">
  <%= f.label(:title, 'Title', class: 'input-label embedded-label') %>
  <%= f.text_field(:title, class: 'input-box embedded-input-box', placeholder: 'Enter title...') %>
</div>

<div class="embedded-form-entry-container">
  <%= f.label(:visible, 'Is post visible?', class: 'input-label embedded-label') %>
  <%= f.check_box(:visible, class: 'input-check-box') %>
</div>

<div class="embedded-form-entry-container">
  <%= f.label(:overview, 'Overview', class: 'input-label embedded-label') %>
  <%= f.text_field(:overview, class: 'input-box embedded-input-box', placeholder: 'Enter overview...') %>
</div>

<div class="embedded-form-entry-container">
  <%= f.label(:date_published, 'Date published', class: 'input-label embedded-label') %>
  <%= f.date_field(:date_published, class: 'input-box embedded-input-box', placeholder: 'Enter date published...', autocomplete: "off") %>
</div>

<%= render partial: "admin/posts/post_sections", locals: {form: f} %>

<div class="embedded-form-entry-container">
  <%= render partial: "partials/submit_right", locals: {form: f, button_text: 'Submit'} %>
</div>
