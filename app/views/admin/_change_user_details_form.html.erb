<h3>
  Update Details
</h3>
<%= form_with(model: User.new,  :url => users_path(@user), method: "put") do |f| %>
  <div class="system_messages">
    <% flash.each do |type, msg| %>
      <div class='<%= type %>'><%= msg %></div> 
    <% end %>
  </div>
  <div class="embedded_form_entry_container">
    <%= label_tag(:username, 'Username:', class: 'input_label embedded_label') %>
    <%= f.text_field(:username, class: 'input_box embedded_input_box', placeholder: 'new username') %>
  </div>
  <div class="embedded_form_entry_container">
    <%= label_tag(:username_confirmation, 'Username confirmation:', class: 'input_label embedded_label') %>
    <%= f.text_field(:username_confirmation, class: 'input_box embedded_input_box', placeholder: 'username confirmation') %>
  </div>
  <div class='input_seperator embedded_input_seperator'></div>
  <div class="form_submit_container">
    <%= f.submit('Update details', class: 'input_submit') %>
  </div>
<% end %>