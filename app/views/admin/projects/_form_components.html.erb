<%= render partial: 'partials/system_messages'%>

<div class="embedded-form-entry-container">
  <%= f.label(:title, 'Title', class: 'input-label embedded-label') %>
  <%= f.text_field(:title, class: 'input-box embedded-input-box', placeholder: 'Enter title...') %>
</div>

<div class="embedded-form-entry-container">
  <%= f.label(:overview, 'Overview', class: 'input-label embedded-label') %>
</div>

<div class="embedded-form-entry-container">
  <%= f.text_area(:overview, class: 'input-box embedded-text-area', placeholder: 'Enter overview...') %>
</div>

<div class="embedded-form-entry-container">
  <%= f.label(:date, 'Date', class: 'input-label embedded-label') %>
  <%= f.date_field(:date, class: 'input-box embedded-input-box', placeholder: 'Enter date...', autocomplete: "off") %>
</div>

<div class="embedded-form-entry-container">
  <%= f.label(:github_link, 'Github link', class: 'input-label embedded-label') %>
  <%= f.text_field(:github_link, class: 'input-box embedded-input-box', placeholder: 'Enter github link...') %>
</div>

<div class="embedded-form-entry-container">
  <%= f.label(:site_link, 'Site link', class: 'input-label embedded-label') %>
  <%= f.text_field(:site_link, class: 'input-box embedded-input-box', placeholder: 'Enter site link...') %>
</div>

<%= render partial: 'admin/projects/project_image_upload', locals: {project: project, form: f} %>

<div class="embedded-form-entry-container submit-right">
  <%= f.submit("Submit", class: 'input-submit') %>
</div>