<div class='wide-card-text-container'>
  <h3>
    <%= project.title %>
  </h3>
  <div class='wide-card-overview'>
    <%= project.overview %>
  </div>
</div>
<div class='wide-card-links-container'>
  <% unless project.github_link.blank? %>
    <a href='<%= project.github_link %>' class='logo-link' target='_blank' title='github link'>
      <%= image_tag('icons/github-icon', alt: 'github logo') %>
    </a>
  <% end %>
  <% unless project.site_link.blank? %>
    <a href='<%= project.site_link %>' class='logo-link' target='_blank' title='website link'>
      <%= image_tag('icons/github-icon', alt: 'external link image') %>
    </a>
  <% end %>
</div>