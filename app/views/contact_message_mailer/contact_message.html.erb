<%= content_for :email_title do %>
  New Contact Message
<% end %>

<%= content_for :username do %>
  <%= @to_name %>
<% end %>

<tr>
  <td style='padding: 10px 0px;'>
    You have received a new contact message from: <i><%= @from_name %></i> at <%= @datetime %>.
  </td>
</tr>
<tr>
  <td style='padding: 20px 20px;'>
    <i><%= @content %></i>
  </td>
</tr>
<tr>
  <td style='padding: 10px 0px;'>
    Reply to this message to respond.
  </td>
</tr>