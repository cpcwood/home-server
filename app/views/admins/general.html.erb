<% content_for :section_title do %>
  Admin Zone
<% end %>
<% content_for :section_subtitle do %>
  General
<% end %>

<div class='dashboard-container'>
  <%= render 'admins/dashboard_sidebar' %>
  <div class='dashboard-content'>
    <div class='dashboard-item-container'>
      <h3>
        System Messages
      </h3>
      <div class="system-messages">
        <% flash.each do |type, msg| %>
          <div class='<%= type %>'><%= msg %></div>
        <% end %>
        <div class='no-messages'>You have no messages</div>
      </div>
    </div>
    <div class='dashboard-item-separator'></div>
    <div class='dashboard-item-container'>
      <h3>
        Last Login
      </h3>
      <strong>Time and Date:</strong> <%= @user.last_login_time.strftime("%H:%M %d-%m-%Y") %>
      <br><br>
      <strong>IP Address:</strong> <%= @user.last_login_ip %>
    </div>
    <div class='dashboard-item-separator'></div>
    <div class='dashboard-item-container'>
      <%= render 'admins/current_user_details'%>
    </div>
    <div class='dashboard-item-separator'></div>
        <div class='dashboard-item-container'>
      <h3>
        Notifications
      </h3>
      Placeholder
    </div>
    <div class='dashboard-item-separator'></div>
    <div class='dashboard-item-container'>
      <h3>
        Analytics
      </h3>
      Placeholder
    </div>
    <div class='dashboard-item-separator'></div>
  </div>
</div>