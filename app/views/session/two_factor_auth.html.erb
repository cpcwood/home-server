<div class='login_container'>
  <div class='login_form_container'>
    <h1> Two Factor Authentication </h1>
    <%= form_with(url: "/2fa", method: :post, class: 'login_form') do %>
      <% flash.each do |type, msg| %>
      <div class="alert">
        <%= msg %>
      </div>
      <% end %>
      <%= label_tag(:auth_code, 'Please enter 6 digit 2fa auth code send to your mobile number:') %>
      <br>
      <%= text_field_tag(:auth_code) %>
      <br><br>
      <%= submit_tag("Login") %>
    <% end %>
    <%= form_tag('/2fa', method: :put) do %>
      <%= submit_tag("Resend 2fa code") %>
    <% end %>
  </div>
</div>