<h1> Login </h1>
<div class='login_container'>
  <div class='login_form_container'>
    <div>
      <%= form_with(url: "/login", method: "post", class: 'login_form') do |f| %>
        <% flash.each do |type, msg| %>
          <div class="alert">
            <%= msg %>
          </div>
        <% end %>
        <%= label_tag(:user, 'Username or Email') %>
        <br>
        <%= f.text_field(:user, required: true) %>
        <br>
        <%= label_tag(:password, 'Password') %>
        <br>
        <%= f.password_field(:password, required: true) %>
        <br><br>
        <div id='recaptcha'></div>
        <br>
        <%= f.submit("Login") %>
      <% end %>
    </div>
    <br>
    <div>
      <%= link_to "Forgotten Password", "/forgotten-password" %>
    </div>
  </div>
</div>
<%= javascript_pack_tag 'recaptcha/recaptcha' %>