document.addEventListener('turbolinks:load', function(){
  var toggleSections = document.querySelector('.toggle_sections')

  function openSections() {
    this.classList.add('open')
    this.parentElement.classList.add('open')
    this.removeEventListener('click', openSections)
    this.addEventListener('click', closeSections)
  }

  function closeSections() {
    this.classList.remove('open')
    this.parentElement.classList.remove('open')
    this.removeEventListener('click', closeSections)
    this.addEventListener('click', openSections)
  }

  toggleSections.addEventListener('click', openSections)
})