// Application
import navMenuClick from './navbar/navMenu.js'
import touchHover from './touch/touchHover.js'
import headerImageScroll from './header/headerImageScroll.js'

// Session & Password
import loadReCaptcha from './recaptcha/loadReCaptcha.js'

// Admin Zone
import adminDashboardToggle from './admin/adminDashboardToggle.js'


document.addEventListener('turbolinks:load', () => {
  navMenuClick()
  touchHover()
  headerImageScroll()

  if (document.querySelector('.dashboard_sidebar_toggle')) {
    adminDashboardToggle()
  }
  if (document.querySelector('.recaptcha')) {
    loadReCaptcha()
  }
})

console.log('Welcome to <%= Rails.application.credentials.email[:host] %> :)')