{
  "name": "home_server",
  "private": true,
  "scripts": {
    "test": "NODE_ENV=test jest --no-cache",
    "lint": "eslint --fix . && stylelint --fix \"**/*.scss\""
  },
  "dependencies": {
    "@babel/plugin-transform-modules-commonjs": "^7.12",
    "@rails/actioncable": "^6",
    "@rails/activestorage": "^6",
    "@rails/ujs": "^6",
    "@rails/webpacker": "^5",
    "carbon-now-cli": "^1.4",
    "core-js": "3",
    "jpeg-js": "^0.4",
    "js-cookie": "^2.2",
    "justified-layout": "^4",
    "node-forge": "0.10.0",
    "object-path": "0.11.8",
    "rails-erb-loader": "^5",
    "resolve-url-loader": "^3",
    "sass": "^1",
    "simplelightbox": "^2.5",
    "stimulus": "^2",
    "turbolinks": "^5.2",
    "typed.js": "^2.0"
  },
  "version": "0.1.0",
  "devDependencies": {
    "@babel/core": "^7.15",
    "@babel/preset-env": "^7.15",
    "@testing-library/dom": "^7",
    "babel-eslint": "^10.1",
    "babel-jest": "^27",
    "eslint": "^7",
    "eslint-config-standard": "^16",
    "eslint-plugin-import": "^2.21",
    "eslint-plugin-node": "^11.1",
    "eslint-plugin-promise": "^4.2",
    "eslint-plugin-standard": "^4.0",
    "html-loader-jest": "^0.2.1",
    "jest": "^27",
    "jest-erb-transformer": "^1",
    "stylelint": "^13",
    "stylelint-config-sass-guidelines": "^7",
    "stylelint-config-standard": "^20",
    "webpack-dev-server": "^3"
  },
  "jest": {
    "testRegex": ".*_spec.js",
    "roots": [
      "<rootDir>/spec/javascript"
    ],
    "moduleFileExtensions": [
      "js",
      "js.erb",
      "erb"
    ],
    "moduleDirectories": [
      "node_modules",
      "<rootDir>/app/frontend/packs"
    ],
    "moduleNameMapper": {
      "\\.(jpg|jpeg|png|gif|eot|otf|webp|svg|ttf|woff|woff2|mp4|webm|wav|mp3|m4a|aac|oga)$": "<rootDir>/spec/javascript/__mocks__/fileMock.js",
      "\\.(css|less)$": "<rootDir>/spec/javascript/__mocks__/styleMock.js"
    },
    "transform": {
      "^.+\\.js$": "babel-jest",
      "^.+\\.erb$": [
        "jest-erb-transformer",
        {
          "application": "rails",
          "timeout": 20000,
          "babelConfig": true
        }
      ]
    }
  }
}
