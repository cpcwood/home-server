{
  "name": "home_server",
  "private": true,
  "scripts": {
    "test": "NODE_ENV=test jest --no-cache",
    "lint": "eslint --fix . && stylelint --fix \"**/*.scss\""
  },
  "dependencies": {
    "@hotwired/turbo-rails": "^7.1.3",
    "@rails/webpacker": "5.4.3",
    "carbon-now-cli": "1.4.0",
    "core-js": "3.18.1",
    "jpeg-js": "0.4.4",
    "js-cookie": "2.0.0",
    "justified-layout": "4.1.0",
    "node-forge": "1.3.0",
    "object-path": "0.11.8",
    "rails-erb-loader": "5.5.2",
    "resolve-url-loader": "3.0.0",
    "sass": "1.42.1",
    "sass-loader": "^10.3.1",
    "simplelightbox": "2.9.0",
    "stimulus": "2.0.0",
    "turbolinks": "5.2.0",
    "typed.js": "2.0.12"
  },
  "version": "1.0.0",
  "devDependencies": {
    "@babel/core": "^7.15.5",
    "@babel/eslint-parser": "^7.15.7",
    "@babel/plugin-transform-modules-commonjs": "^7.15.4",
    "@testing-library/dom": "^7.0.0",
    "babel-eslint": "^10.0.0",
    "babel-jest": "^27.2.4",
    "eslint": "^7.32.0",
    "eslint-config-standard": "^16.0.3",
    "eslint-plugin-import": "^2.24.2",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-promise": "^5.1.0",
    "eslint-plugin-standard": "^5.0.0",
    "html-loader-jest": "^0.2.1",
    "jest": "^27.2.4",
    "jest-erb-transformer": "^1.2.6",
    "stylelint": "^13.13.1",
    "stylelint-config-sass-guidelines": "^7.0.0",
    "stylelint-config-standard": "^22.0.0",
    "webpack-dev-server": "^3.11.3"
  },
  "jest": {
    "testRegex": ".*_spec.js",
    "roots": [
      "<rootDir>/spec/javascript"
    ],
    "moduleFileExtensions": [
      "js",
      "js.erb",
      "erb"
    ],
    "moduleDirectories": [
      "node_modules",
      "<rootDir>/app/frontend/packs"
    ],
    "moduleNameMapper": {
      "\\.(jpg|jpeg|png|gif|eot|otf|webp|svg|ttf|woff|woff2|mp4|webm|wav|mp3|m4a|aac|oga)$": "<rootDir>/spec/javascript/__mocks__/fileMock.js",
      "\\.(css|less)$": "<rootDir>/spec/javascript/__mocks__/styleMock.js"
    },
    "transform": {
      "^.+\\.js$": "babel-jest",
      "^.+\\.erb$": [
        "jest-erb-transformer",
        {
          "application": "rails",
          "timeout": 20000,
          "babelConfig": true
        }
      ]
    }
  }
}
